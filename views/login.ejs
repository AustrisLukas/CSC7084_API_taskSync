<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Log in | TaskSync</title>
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/css/login.css">

</head>
<header class="p-3">
  <div class="container-sm text-center">
    <img src="/images/TaskSyncLogo.png" alt="TaskSync logo" height="50px">
  </div>
</header>

<body class="pt-2">
  <div class="container-lg justify-content-center">
    <div class="row">
      <div class="col-6 mx-auto">
        <div class="card">
          <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
              <li class="nav-item">
                <a class="nav-link active" aria-current="true" href="#">Log In</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/register">Sign Up</a>
              </li>
            </ul>
          </div>
          <div class="card-body">
            <h5 class="card-title pt-3">Log in to your TaskSync account</h5>
            <form method="post" action="/index">
              <!--INPUT user_email-->
              <div class="mb-3 input-group has-validation">
                <div class="form-floating is-invalid">
                  <input type="email" class="form-control" id="user_email" placeholder="example@email.com" required>
                  <label for="user_email" class="form-label">Email address</label>
                </div>
                <div class="invalid-feedback">

                </div>
              </div>
              <!--INPUT PASSWORD-->
              <div class="mb-3 input-group has-validation">
                <div class="form-floating is-invalid">
                  <input type="password" class="form-control" id="user_password" placeholder="Password" required>
                  <label for="user_password" class="form-label">Password</label>
                </div>
                <div class="invalid-feedback">

                </div>
                <div class="mb-3 form-check">
                  <input type="checkbox" class="form-check-input" id="password_remember">
                  <label class="form-check-label" for="password_remember">Remember password</label>
                </div>
              </div>
              <!--LOG IN-->
              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary m-1">Log in</button>
                <button type="reset" class="btn btn-secondary m-1">Clear</button>
                <button type="button" class="btn btn-warning m-1" disabled>Reset password</a></button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
  </script>
</body>

</html>