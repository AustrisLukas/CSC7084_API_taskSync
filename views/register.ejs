<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Register | TaskSync</title>
  <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script type="module" src="/js/register.js" defer></script>
  <link rel="stylesheet" href="css/register.css">


</head>
<header class="p-3">
  <div class="container-sm text-center">
    <img src="/images/TaskSyncLogo.png" alt="TaskSync logo" height="50px">
  </div>
</header>

<body class="pt-2">

  <div class="container-lg justify-content-center">
    <div class="row">
      <div class="col-6 mx-auto">
        <div class="card">
          <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
              <li class="nav-item">
                <a class="nav-link" aria-current="true" href="/auth/login">Log In</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="#">Sign Up</a>
              </li>
            </ul>
          </div>
          <div class="card-body">
            <h5 class="card-title pt-3">Register new TaskSync account</h5>
            <!-- FORM START -->
            <form method="post" action="/register" class="needs-validation" novalidate>
              <!--INPUT name-->
              <div class="mb-3 input-group">
                <div class="form-floating">
                  <input type="text" class="form-control" name="name" placeholder="Name">
                  <label for="name" class="form-label">Name</label>
                  <div class="invalid-feedback">
                    Name must be alphabetical and 2-20 characters long.
                  </div>
                </div>
              </div>
              <!--INPUT user_email-->
              <div class="mb-3 input-group">
                <div class="form-floating">
                  <input type="email" class="form-control" name="user_email" placeholder="Email address">
                  <label for="user_email" class="form-label">Email address</label>
                  <div class="invalid-feedback">
                    Invalid e-mail address. Expected format -example@email.com
                  </div>
                </div>

              </div>
              <!--INPUT PASSWORD-->
              <div class="mb-3 input-group has-validation">
                <div class="form-floating ">
                  <input type="password" class="form-control" name="password1" placeholder="Password" required>
                  <label for="user_password" class="form-label">Password</label>
                  <div class="invalid-feedback">
                  </div>
                  <div class="valid-feedback">
                </div>
                </div>

              </div>
              <!--REREAT PASSWORD-->
              <div class="mb-3 input-group has-validation">
                <div class="form-floating ">
                  <input type="password" class="form-control" name="password2" placeholder="Repeat Password" required>
                  <label for="user_password" class="form-label">Repeat Password</label>
                  <div class="invalid-feedback">
                  </div>
                  <div class="valid-feedback">
                </div>
                </div>

              </div>
              <!--TERMS & CONDITIONS-->
              <div class="form-check has-validation">
                <input class="form-check-input" type="checkbox" role="switch" name="termsAndConditions" id="TC" >
                <label class="form-check-label" for="TC">
                  Agree with TaskSync Terms & Conditions
                </label>
                <div class="invalid-feedback">
                    T&Cs not accepted.
                </div>

                
              </div>
              <!--REGISTER ACCOUNT-->
              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success m-1">Register</button>
                <button type="reset" class="btn btn-secondary m-1">Clear</button>

              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
  </script>
</body>

</html>